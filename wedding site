<script>
  /* SLIDESHOW */
  const slides = document.querySelectorAll(".hero-slide");
  let i = 0;
  setInterval(() => {
    slides[i].classList.remove("active");
    i = (i + 1) % slides.length;
    slides[i].classList.add("active");
  }, 5000);

  /* COUNTDOWN */
  const weddingDate = new Date("May 1, 2026 10:30:00").getTime();
  setInterval(() => {
    const d = weddingDate - new Date().getTime();
    if (d <= 0) {
      document.getElementById("countdown").innerHTML = "√à arrivato il grande giorno! üíç";
      return;
    }
    cd-days.innerText = Math.floor(d / 86400000);
    cd-hours.innerText = Math.floor((d % 86400000) / 3600000);
    cd-minutes.innerText = Math.floor((d % 3600000) / 60000);
    cd-seconds.innerText = Math.floor((d % 60000) / 1000);
  }, 1000);

  /* RSVP */
  document.getElementById("partecipazione").addEventListener("change", e => {
    document.getElementById("intolleranzeBox").style.display =
      e.target.value === "S√¨" ? "block" : "none";
  });
</script>

